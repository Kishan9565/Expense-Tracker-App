<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="35dp"
    android:padding="30dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_dilog"
        android:padding="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Expense"
            android:textColor="#171717"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <!-- Dropdowns Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Category Dropdown -->
            <AutoCompleteTextView
                android:id="@+id/spinnerCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Category"
                android:drawableEnd="@drawable/down"
                android:drawablePadding="8dp"
                android:drawableTint="@color/black"
                android:textColorHint="@color/black"
                android:background="@drawable/cat_bg"
                android:padding="12dp"
                android:clickable="true"
                android:textColor="@color/black"
                android:inputType="none"
                android:focusable="false" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <!-- Payment Method Dropdown -->
            <AutoCompleteTextView
                android:id="@+id/spinnerPayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Payment"
                android:drawableEnd="@drawable/down"
                android:drawablePadding="8dp"
                android:drawableTint="@color/black"
                android:background="@drawable/pay_bg"
                android:padding="12dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:inputType="none"
                android:focusable="false" />
        </LinearLayout>

        <!-- Amount -->
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Enter Amount"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@color/black"/>

        <!-- Comment -->
        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Add a Comment"
            android:inputType="textMultiLine"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:minLines="2"
            android:textColor="@color/black"/>

        <!-- Date -->
        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Select Date"
            android:focusable="false"
            android:inputType="none"
            android:drawableEnd="@drawable/cal"
            android:drawablePadding="8dp"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@color/black"/>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/black"
                android:backgroundTint="#FEE0D6"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:backgroundTint="#FFF7D7"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
