<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#E6F7EC"/>
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#66BB6A"/>
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2FBF5"/>
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#A5D6A7"/>
            <padding android:left="12dp" android:top="10dp" android:right="12dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>
